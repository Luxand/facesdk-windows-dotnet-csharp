<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LiveRecognitionWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiveRecognitionWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Luxand LiveRecognition WinUI"
    Closed="Window_Closed"
    >

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Page Loaded="Page_Loaded">
        <Grid x:Name="layoutRoot">
            <Grid>
                <Image x:Name="CameraImage"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Stretch="Uniform"
                       Margin="16"
                       PointerReleased="CameraImage_PointerReleased"
                       PointerMoved="CameraImage_PointerMoved"/>
                <Canvas x:Name="canvas"
                        IsHitTestVisible="False"
                        Background="Transparent"/>
            </Grid>
            <Button 
                x:Name="StartCameraBtn"
                Content="Start camera"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="16,0,16,80"
                Height="48"
                FontSize="18"
                Click="StartCamera"
                />
            <Button
                x:Name="CheckImageBtn"
                Content="Check image"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="16"
                Height="48"
                FontSize="18"
                Click="CheckImageBtn_Click"
                />
        </Grid>
    </Page>
</Window>
